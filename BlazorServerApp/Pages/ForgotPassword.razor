@page "/forgotpassword"
@inherits ForgotPasswordBase
@inject NavigationManager UriHelper

<style type="text/css">
    .content-center {
        align-items: center;
        justify-content: center;
        display: flex;
    }
</style>

        <MudCard Elevation="12" Style="width:350px;margin:0 auto;padding-top:30px;">
            <MudCardContent>
                <MudText Typo="Typo.h6" Class="my-5 content-center">Can't log in?</MudText>
                <MudText Typo="Typo.subtitle2">we'll send a recovery link to</MudText>
                <MudItem>
                    <MudTextField @bind-Value="EmailAddress" Label="EmalId" Variant="Variant.Outlined" Adornment="Adornment.End" AdornmentIcon="@Icons.Filled.Email" AdornmentColor="Color.Primary" />
                </MudItem>
            </MudCardContent>
            <MudCardActions>
                <MudGrid>
                    <MudItem md="12" lg="12" Class="content-center">
                        <MudButton Size="Size.Large" Variant="Variant.Filled" DisableElevation="true" Color="Color.Primary">Send recovery link</MudButton>
                    </MudItem>
                    <MudItem md="12" lg="12" Class="my-3 content-center">
                        <MudLink Href="/" Typo="Typo.body2" Style="">Return to log in</MudLink>
                    </MudItem>
                </MudGrid>
            </MudCardActions>
        </MudCard>
        

