@page "/"
@*@page"/ogin"*@
@inherits LoginBase

<style type="text/css">
    .content-center {
        align-items: center;
        justify-content: center;
        display: flex;
    }

    .content-padding {
    }

    .content-margin {
    }
</style>
<MudHidden Breakpoint="Breakpoint.SmAndUp" Invert="true">
    <MudCard Elevation="3" Class="my-4" Style="width:650px;margin:0 auto;">
        <MudCardHeader>
            <CardHeaderAvatar>
                <MudAvatar Image="_content/MudBlazor.Docs/41a.jpg" Size="Size.Large" />
            </CardHeaderAvatar>
            <CardHeaderContent>
                <MudGrid>
                    <MudItem md="12">
                        <MudText Class="my-3 content-center" Typo="Typo.h3">Sign In</MudText>
                        <MudText Class="my-3 content-center" Typo="Typo.body2">Login with your credentials</MudText>
                    </MudItem>
                    <MudItem md="12" Class="my-0">
                        <MudText Class="content-center" Typo="Typo.body2">
                            Don't have an account?<MudLink Href="/Register" Typo="Typo.body2">Register here</MudLink>
                        </MudText>
                    </MudItem>
                </MudGrid>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudTextField Class="my-2" @bind-Value="UserName" Label="Username" InputType="InputType.Text" Variant="Variant.Outlined" />
            <MudTextField Class="my-2" @bind-Value="Password" Label="Password" InputType="InputType.Password" Variant="Variant.Outlined" />
            <MudGrid Class="my-2">
                <MudItem md="9">
                    <MudCheckBox @bind-Checked="RememberMe" Label="Remember Me" Color="Color.Primary"></MudCheckBox>
                </MudItem>
                <MudItem md="3">
                    <MudLink Href="/Register" Typo="Typo.body2" Class="pr-0">Forgot password?</MudLink>
                </MudItem>
            </MudGrid>
        </MudCardContent>
        <MudCardActions>
            <MudButton Class="ma-2" Size="Size.Large" Variant="Variant.Filled" DisableElevation="true" Color="Color.Primary" OnClick="SignIn">SIGN IN</MudButton>
        </MudCardActions>
    </MudCard>
</MudHidden>
